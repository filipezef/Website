<head> 
  <title>Messages</title>
</head>

<section class="hero container">
  <h2>Messages</h2>
</section>

<section class="row-alt">
  <div class="lead container">
    <p>Be kind and leave a message for trial purposes.</p>
    <a class="btn-mine btn-alt" href="/articles/new" >New Message</a>
  </div>
</section>
<section class="row">
  <div class="grid">

    <div class="container">
      <% @articles.each do |article| %>
        <div class="row justify-content-md-center">
          <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
              <div class="card-header font-italic">
                by <%= article.user.username if article.user %>
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                <h4 class="card-text"><%= simple_format(truncate(article.description, length: 100)) %></h4>
                <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
                <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
                <%= link_to "Delete", article_path(article.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
              </div>
              <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</section>

