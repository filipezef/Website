<section class="row-alt mt-3 mb-5">
  <div class="lead container mt-2">
    <p class="mt-3">Category: <%= @category.name %></p>
  </div>
</section>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4 mb-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-light" %>
  </div>
<% end %>

<h5 class="text-center mt-4">Messages</h5>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article' %>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>