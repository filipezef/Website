<head> 
  <title>Login</title>
</head>

<section class="hero container">
  <h2>Log in</h2>
</section>

<div class="container">
  <div class="row justify-content-center" >
    <div class="col-10" >
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 rounded", id: "form", local: true) do |f| %>
        
        <div class="form-group row", id="form">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10 mb-3"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row", id="form">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10 mb-3"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center", id="form">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg col-3" %>
        </div>
        
      <% end %>
    </div>
  </div>
  
</div>

<section class="row-mine">
  <div class="lead container">
    <%= link_to "cancel", users_path, class: "btn-mine btn-alt" %>
  </div>
</section>
