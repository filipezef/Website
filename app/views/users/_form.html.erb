<div class="container">
  <div class="row justify-content-center" >
    <div class="col-10" >
      <%= render "shared/errors", obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 rounded", id: "form", local: true) do |f| %>
        
        <div class="form-group row", id="form">
          <%= f.label :username, class: "col-2 col-form-label text-light mb-3" %>
          <div class="col-10", id="form" >
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>
        
        <div class="form-group row", id="form">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10 mb-3"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row", id="form">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10 mb-3"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center", id="form">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg col-3" %>
        </div>
        
      <% end %>
    </div>
  </div>
  
</div>

<section class="row-mine">
  <div class="lead container">
    <%= link_to "cancel", articles_path, class: "btn-mine btn-alt" %>
  </div>
</section>
