<!--Navigation tag-->

<nav class="navbar navbar-expand-lg navbar-dark bg-light">
  <div class="container">
    <%= link_to "ZefBlog", root_path, class: "navbar-brand", id: "logo", alt: "Z logo" %>
    <button class="navbar-toggler custom-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if logged_in? %>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
              <%= link_to "Bloggers", users_path, class: "nav-link active" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Articles
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to "New article", new_article_path, class: "dropdown-item" %></li>
              <li><%= link_to "View articles", articles_path, class: "dropdown-item" %></i>
              <li><%= link_to "View categories", categories_path, class: "dropdown-item" %></li>
            </ul>
          </li>

            <!-- Admin features -->
            <% if current_user.admin? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Categories
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><%= link_to "New category", new_category_path, class: "dropdown-item" %></li>
                  <li><%= link_to "View categories", categories_path, class: "dropdown-item" %></li>
                </ul>
              </li>
            <% end %><!-- End of admin features -->

